#
# This Makefile is here just to support 'make clean'
#

all:
	@echo "Nothing to do for 'all' in VS_LTKCPP"

clean:
	rm -rf dx101/Debug                  dx101/Release
	rm -rf dx201/Debug                  dx201/Release
	rm -rf example1/Debug               example1/Release
	rm -rf libltkcpp/Debug              libltkcpp/Release

#
# This target creates fake files as placeholder for the files
# usually generated by Visual Studio.
# It is used to accomodate ../Release/Makefile
#

fugazi:
	mkdir libltkcpp/Debug
	touch libltkcpp/Debug/libltkcpp_d.lib
	mkdir libltkcpp/Release
	touch libltkcpp/Release/libltkcpp_r.lib
